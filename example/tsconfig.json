{
    "compilerOptions": {
        "outDir": "./dist",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "module": "esNext",
        "target": "es5",
        "moduleResolution": "node",
        "lib": ["es2015", "dom"]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        ".git",
        "node_modules",
        "old"
    ]
}
